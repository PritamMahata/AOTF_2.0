// apps/jobs/tsconfig.json

{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* ✅ Core Next.js + TS settings */
    "baseUrl": ".",
    "target": "ES2017",  // ✅ Add this - consistent with admin app
    "lib": ["dom", "dom.iterable", "esnext"],  // ✅ Add this - required for browser APIs
    "module": "esnext",  // ✅ Add this - explicit module system
    "moduleResolution": "bundler",  // ✅ Add this - Next.js 15 uses bundler
    "jsx": "preserve",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,  // ✅ Add this - good practice

    /* ✅ Type definitions */
    "types": [
      "node",
      "next",  // ✅ Add this - Next.js types
      "next/image-types/global"  // ✅ Add this - Next.js Image types
    ],

    /* ✅ Path aliases for local + monorepo packages */
    "paths": {
      "@/*": ["src/*"],

      /* ⚠️ These are redundant since @/* already covers them */
      // "@/components/*": ["src/components/*"],  // Remove - covered by @/*
      // "@/types/*": ["src/types/*"],  // Remove - covered by @/*

      /* ✅ Shared monorepo imports */
      "@aotf/config/*": ["../../packages/config/*"],
      "@aotf/lib/*": ["../../packages/lib/src/*"],
      "@aotf/models/*": ["../../packages/models/src/*"],
      "@aotf/nextauth/*": ["../../packages/nextauth/*"],
      "@aotf/types/*": ["../../packages/types/*"],
      "@aotf/ui/*": ["../../packages/ui/src/*"],
      "@aotf/ui/hooks/*": ["../../packages/ui/src/hooks/*"],
      "@aotf/utils/*": ["../../packages/utils/src/*"],
      "@aotf/scripts/*": ["../../scripts/*"]
    },

    /* ✅ Enable Next.js TypeScript plugin */
    "plugins": [{ "name": "next" }]
  },

  /* ✅ File inclusion for Next.js + TypeScript project */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  /* ✅ Exclude unnecessary directories */
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}
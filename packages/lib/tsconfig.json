{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* ✅ Base Setup */
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "noEmitOnError": true,

    /* ✅ Module Resolution */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2021",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": false,

    /* ✅ Internal import paths */
    "paths": {
      "@aotf/lib": ["index.ts"],
      "@aotf/lib/*": ["src/*"]
    },

    /* ✅ Strict typing */
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": [
    "src/**/*",
    "index.ts"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}